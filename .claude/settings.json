{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "git pull",
            "timeout": 30
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "node \"C:\\Users\\ALN\\AppData\\Roaming\\npm\\node_modules\\rins_hooks\\hooks\\auto-commit\\index.js\"",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "git push",
            "timeout": 30
          },
          {
            "type": "command",
            "command": "powershell -c \"[console]::beep(600,200)\""
          }
        ]
      },
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "git add . && git commit -m \"Auto-commit: Command execution\" && git push",
            "timeout": 60
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "git status"
          }
        ]
      }
    ]
  }
}
